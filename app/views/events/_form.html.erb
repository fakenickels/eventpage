<%= simple_form_for @event_main, html: { multipart: true } do |f| %>
	<% if @event_main.errors.any? %>
		<div class="errors">
			<%= @event_main.errors.count %> erro(s)
		</div>
		<ul>
			<% @event_main.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>
	
	<%= f.file_field :banner, label: "Banner" %>
	<%= f.input :name, label: "Nome" %>
	<%= f.input :theme, label: "Tema", placeholder: "Caso não, deixe vazio" %>
	<%= f.input :when, label: "Quando", placeholder: "17 à 15 de janeiro" %>
	<%= f.input :where, label: "Onde", placeholder: "Universidade Qualquer, Av. José Maria, 182, Água Linda" %>
	<%= f.input :description, label: "Descrição" %>
	<%= f.button :submit, "Salvar" %>
<% end %>