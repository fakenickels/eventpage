<!DOCTYPE html>
<html>
<head>
  <title>Eventpage</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Open+Sans|Lato:300,400|Varela+Round|Montserrat:300,400|Raleway:400,200|Oswald|Roboto+Condensed">
</head>
<body>
<%= render 'layouts/home_header' %>

<%= yield %>

<%= render 'layouts/footer' %>
<script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '1535127033410005',
      xfbml      : true,
      version    : 'v2.2'
    });
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "//connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));
</script>
<script type="text/javascript">
  'use strict';

$(document).ready(function(){
  var elHeight = $('.header-mask').height();

  $(window).on('scroll', function(e){
    if( window.scrollY >= elHeight){
      $('#menu').removeClass('navbar-bg');
    } else {
      $('#menu').addClass('navbar-bg');
    }
  })
});


</script>
</body>
</html>
